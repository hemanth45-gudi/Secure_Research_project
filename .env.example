# =============================================================
# .env.example — Copy to .env and fill in your values
# =============================================================

# ── Flask ─────────────────────────────────────────────────────
FLASK_ENV=development
SECRET_KEY=change-me-to-a-long-random-string

# ── MongoDB ──────────────────────────────────────────────────
MONGO_URI=mongodb://localhost:27017/
MONGO_DB=secure_research_db

# ── JWT Secrets ───────────────────────────────────────────────
JWT_ACCESS_SECRET=your-very-long-access-secret-here
JWT_REFRESH_SECRET=your-very-long-refresh-secret-here

# ── Redis ─────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Cloud Storage ─────────────────────────────────────────────
# Set STORAGE_BACKEND=minio for local dev (Docker Compose includes MinIO)
# Set STORAGE_BACKEND=s3 for AWS S3 in production
STORAGE_BACKEND=minio
S3_BUCKET=secure-research-files

# MinIO (local dev) — change for AWS S3 in production
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# ── Email (SMTP) ─────────────────────────────────────────────────────────────
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# ── Security ─────────────────────────────────────────────────────────────────
ADMIN_REGISTRATION_KEY=AdminSecret123!
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
